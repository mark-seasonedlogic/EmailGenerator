<Window
    x:Class="OutlookDeviceEmailer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Email Generator">

    <NavigationView IsSettingsVisible="True"
                    PaneDisplayMode="Left"
                    SelectionChanged="NavigationView_SelectionChanged">
            <NavigationView.MenuItems>
            <NavigationViewItem Content="Email Generator" Icon="Mail" Tag="Generator" />
            <NavigationViewItem Content="Editor" Icon="Edit" Tag="Editor" />
            <NavigationViewItem Content="Settings" Icon="Setting" Tag="Settings" />
            <NavigationViewItem Content="Dashboard" Icon="Home" Tag="dashboard" IsSelected="True" />

        </NavigationView.MenuItems>
        <Grid x:Name="RootGrid">
            <Frame x:Name="MainFrame" />
        </Grid>
        

    </NavigationView>
</Window>
