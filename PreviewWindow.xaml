<Window
    x:Class="OutlookDeviceEmailer.PreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Email Preview">

    <Grid Name="PreviewGrid" Padding="20" AllowDrop="True" DragOver="Border_DragOver"
          Drop="Border_Drop">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">

            <!-- Email Subject -->
            <TextBlock Name="txtEmailSubject"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <!-- Email Recipient -->
            <TextBlock Name="txtEmailTo"
                       FontSize="14"
                       FontStyle="Italic"
                       Margin="0,0,0,10"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>

            <!-- Email Index -->
            <TextBlock Name="txtEmailIndex"
                       Text="0 / 0"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       FontSize="14"
                       Foreground="Gray"/>

            <!-- Email Body Container -->
            <Border Background="White"
                    Padding="10"
                    CornerRadius="8"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="250">
                    <TextBox Name="txtEmailBody"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="300"
                             Width="550"
                             IsReadOnly="True"/>
                </ScrollViewer>
            </Border>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="20,10,0,0">
                <Button Name="btnPrev"
                        Content="⬅️ Previous"
                        Click="Prev_Click"
                        Width="120"
                        Margin="5"/>
                <Button Name="btnNext"
                        Content="Next ➡️"
                        Click="Next_Click"
                        Width="120"
                        Margin="5"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
